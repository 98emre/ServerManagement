



@if(cities != null)
{
    <div class="container-fluid">
        <div class="row w-50">
            @foreach (var city in cities)
            {
                <CityComponent 
                    City="@city"
                    SelectedCity="@selectedCity"
                    SelectedCityCallBack="HandleCitySelecttion"></CityComponent>
            }
        </div>
    </div>
}

@code {

    [Parameter]
    public EventCallback<string> SelectedCityCallBack { get; set; }

    private string selectedCity = "Toronto";

    private List<string> cities = CitiesRepository.GetCities();

    private void HandleCitySelecttion(string cityName)
    {
        this.selectedCity = cityName;
        SelectedCityCallBack.InvokeAsync(cityName);
    }

    public void ClearSelection()
    {
        this.selectedCity = string.Empty;
    }
}
